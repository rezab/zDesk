<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal emulator">
			<action name="Execute">
				<execute>x-terminal-emulator</execute>
			</action>
		</item>
		<!-- This requires the presence of the 'menu' package to work -->
		<separator/>
		<item label="Display Settings">
			<action name="Execute">
				<execute>arandr</execute>
			</action>
		</item>
		<item label="Appearance">
			<action name="Execute">
				<execute>lxappearance</execute>
			</action>
		</item>
		<item label="Lock Screen Settings">
			<action name="Execute">
				<execute>light-locker-settings</execute>
			</action>
		</item>
		<separator/>
		<item label="Lock Screen">
			<action name="Execute">
				<execute>light-locker-command -l</execute>
			</action>
		</item>
		<item label="Sleep">
			<action name="Execute">
				<execute>gksudo pm-suspend</execute>
			</action>
		</item>
		<item label="Log Off">
			<action name="Exit"/>
		</item>
		<item label="Restart">
			<action name="Execute">
				<execute>gksudo reboot</execute>
			</action>
		</item>
		<item label="Hibernate">
			<action name="Execute">
				<execute>gksudo pm-hibernate</execute>
			</action>
		</item>
		<item label="Shutdown">
			<action name="Execute">
				<execute>gksudo poweroff</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
